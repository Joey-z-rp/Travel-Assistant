{
  "name": "hns",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^3.9.2",
    "d3": "^5.9.2",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-redux": "^5.1.1",
    "react-router-dom": "^5.0.0",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "three": "^0.102.1",
    "three-orbitcontrols": "^2.102.1",
    "topojson": "^3.0.2"
  },
  "scripts": {
    "start": "webpack-dev-server --open --config ./webpackConfig/development.js",
    "build": "webpack --config ./webpackConfig/production.js",
    "lint": "tslint -c tslint.json -p .",
    "test": "npm run lint && jest",
    "test-jest": "jest"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@types/jest": "^23.3.9",
    "@types/react": "^16.7.6",
    "babel-loader": "^8.0.4",
    "babel-polyfill": "^6.26.0",
    "clean-webpack-plugin": "^1.0.0",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^1.0.1",
    "file-loader": "^2.0.0",
    "jest": "^23.6.0",
    "postcss-loader": "^3.0.0",
    "react-test-renderer": "^16.6.3",
    "ts-jest": "^23.10.4",
    "ts-loader": "^5.3.0",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-react": "^3.6.0",
    "typescript": "^3.1.6",
    "uglifyjs-webpack-plugin": "^2.1.2",
    "webpack": "^4.25.1",
    "webpack-bundle-analyzer": "^3.0.3",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.2.1",
    "webpack-merge": "^4.1.4",
    "worker-loader": "^2.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "moduleNameMapper": {
      "\\.(css|less|styl|scss|sass|sss)$": "identity-obj-proxy"
    },
    "transform": {
      "\\.tsx?$": "ts-jest",
      "\\.(jpg|jpeg|png|gif|svg)$": "<rootDir>/tools/testHelpers/fileMock.js"
    },
    "testRegex": ".*\\.test\\.tsx?$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/webpackConfig/"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,ts,tsx}",
      "!**/*.d.ts"
    ]
  }
}
